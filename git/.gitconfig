[user]
	name = Lorenzo Bolla
	email = lorenzo.bolla@yougov.com
	signingkey = 0x0DF83D43C5750E74
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	# editor = vi
	pager = less -FRSX
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
	# bigfilethreshold = 200K
[alias]
	tags = tag --sort=-taggerdate
	rank = shortlog -sn --no-merges
	searchcommits = "!f() { query=\"$1\"; shift; git log -S\"$query\" \"$@\"; }; f \"$@\""
	last = cat-file commit HEAD
	glog = log --pretty=format:'%C(green)%h %C(yellow)[%ad]%C(red)%d %C(reset)%s%C(blue) [%cn]' --decorate --date=iso --graph
[diff "mwbdiff"]
	textconv = mwb-diff
[tig]
	show-date = yes
	tab-size = 8
	show-refs = yes
[push]
	default = current
	followTags = true
[credential]
	helper = cache
[log]
	decorate = full
[diff]
	tool = meld
[magit]
	hideCampaign = true
