[core]
	# editor = vi
	pager = less -FRSX
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
	# bigfilethreshold = 200K
[includeIf "gitdir:~/src/github.com/lbolla/"]
        path = .gitconfig-github.com-lbolla
[includeIf "gitdir:~/src/yougov/"]
        path = .gitconfig-yougov
[commit]
	gpgSign = true
[tag]
	gpgSign = true
[push]
	default = current
	followTags = true
[log]
	decorate = full
	# showSignature = true
[alias]
	tags = tag --sort=-taggerdate
	rank = shortlog -sn --no-merges
	searchcommits = "!f() { query=\"$1\"; shift; git log -S\"$query\" \"$@\"; }; f \"$@\""
	last = cat-file commit HEAD
	glog = log --pretty=format:'%C(green)%h %C(yellow)[%ad]%C(red)%d %C(reset)%s%C(blue) [%cn]' --decorate --date=iso --graph
[diff]
	tool = meld
[diff "mwbdiff"]
	textconv = mwb-diff
[credential]
	helper = cache
[magit]
	hideCampaign = true
[tig]
	show-date = yes
	tab-size = 8
	show-refs = yes
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan