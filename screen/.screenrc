# ------------------------------------------------------------------------------
# SCREEN SETTINGS
# ------------------------------------------------------------------------------

startup_message off
nethack on
escape ^Xx
deflogin on
vbell off
defscrollback 1024

# ------------------------------------------------------------------------------
# SCREEN KEYBINDINGS
# ------------------------------------------------------------------------------

# Remove some stupid / dangerous key bindings
bind ^k
bind ^\

# Make them better
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history

# Split windows
bind s split
bind v split -v
bind o only
bind c remove
bind j focus down
bind k focus up
bind h focus left
bind l focus right

# ------------------------------------------------------------------------------
# TERMINAL SETTINGS
# ------------------------------------------------------------------------------

term screen-256color

termcapinfo vt100 dl=5\E[M
termcapinfo xterm*|urxvt*|rxvt*|kterm*|Eterm* hs:ts=\E]0;:fs=\007:ds=\E]0;\007
termcapinfo xterm*|linux*|urxvt*|rxvt*|screen*|Eterm* OP
termcapinfo xterm 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

hardstatus off
hardstatus alwayslastline
hardstatus string "%-w%{= BW}%50>%n %t%{-}%+w%<"

defnonblock 5

# ------------------------------------------------------------------------------
# STARTUP SCREENS
# ------------------------------------------------------------------------------

# screen top
