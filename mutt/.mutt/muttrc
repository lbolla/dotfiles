# See manual: http://www.mutt.org/doc/manual/manual-6.html#ss6.3

set realname="Lorenzo Bolla"
set editor='vim'
set move=no
set delete=ask-yes
set mail_check=60
set timeout=90
set imap_keepalive=30
set imap_idle=yes
set imap_check_subscribed
set include
set reply_to
set abort_nosubject=no
set hdr_format="%4C %Z %{%m/%d} %-15.15F (%4c) %s"
set pager_stop=yes
set pager_index_lines=6
set sort_alias=alias
set reverse_alias=yes
set alias_file=~/.mutt/aliases
#  source "~/.mutt/aliases"
source "tr a-zA-Z n-za-mN-ZA-M < ~/.mutt/aliases.rot13 |"
#  set display_filter=~/.mutt/auto-add-alias.sh
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates
set smart_wrap = yes
set sort = 'threads'
set sort_aux = 'last-date-received'
set index_format="%4C %Z %{%b %d} %-25.25F (%4l) %s"

unset markers
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
alternative_order text/plain text/html text
auto_view text/html

set followup_to=no
set honor_followup_to=no

macro index \ca ':source "tr a-zA-Z n-za-mN-ZA-M < ~/.mutt/aliases.rot13 |"'\n
macro pager \cb <pipe-entry>'urlview'<enter> 'Follow links with urlview'
macro pager \cw <pipe-entry>'w3m -T text/html'<enter> 'Follow links in w3m'
#  macro index,pager  a "<pipe-message>~/.mutt/auto-add-alias.py<return>" "Add to address book"

bind index G imap-fetch-mail
bind index H help
bind index X tag-thread
bind index \? search-reverse
bind index x tag-entry
bind pager j next-line
bind pager k previous-line

source ~/.mutt/colors
source ~/.mutt/$MUTT_PROFILE/profile
