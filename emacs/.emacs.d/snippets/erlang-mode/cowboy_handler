# -*- mode: snippet -*-
# name: cowboy_handler
# key: cowboy_handler
# --

-module(hello_handler).
-behavior(cowboy_handler).

-export([init/2]).

init(Req0, State) ->
    Req = cowboy_req:reply(
            200,
            #{<<"content-type">> => <<"text/plain">>},
            <<"Hello Erlang!">>,
            Req0),
    {ok, Req, State}.